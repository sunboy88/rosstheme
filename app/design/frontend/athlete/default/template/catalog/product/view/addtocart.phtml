<?php $_product = $this->getProduct(); ?>
<?php $buttonTitle = $this->__('Add to Cart'); ?>
<?php $buynow = $this->__('Buy It Now'); ?>
<?php if($_product->isSaleable()): ?>
    <div class="add-to-cart">
        <?php if(!$_product->isGrouped()): ?>
	    <div class="qty-container">
		    <div class="qty-content-container">
		        <div class="f-right">
			        <a class="qty-math qty-inc icon-<?php echo $athleteHelper->getCfg('main/inverted_button_icons', 'athlete_appearance'); ?>" href="#"></a>
				    <a class="qty-math qty-dec icon-<?php echo $athleteHelper->getCfg('main/inverted_button_icons', 'athlete_appearance'); ?>" href="#"></a>
			    </div>
			    <input type="text" name="qty" id="qty" maxlength="12" value="<?php echo $this->getProductDefaultQty() * 1 ?>" title="<?php echo $this->__('Qty') ?>" class="input-text qty" />
			    <label for="qty"><?php echo $this->__('Qty:') ?></label>
			    <div class="clear"></div>
		    </div>
	    </div>
        <?php endif; ?>
		<button type="button" title="<?php echo $buttonTitle ?>" class="button btn-cart icon-<?php echo $athleteHelper->getCfg('product_info/button_icons', 'athlete_appearance'); ?>" onclick="productAddToCartForm.submit(this)"><span><span><?php echo $buttonTitle ?></span></span></button>

		<button type="button" title="<?php echo $buynow ?>" class="button" onclick='window.location = "<?php echo Mage::helper('checkout/url')->getCheckoutUrl() ?>"'><span><span><?php echo $buynow ?></span></span></button>

		<button type="button" title="<?php echo $this->__('Make An Offer') ?>" class="button"><span><span><?php echo $this->__('Make An Offer') ?></span></span></button>
