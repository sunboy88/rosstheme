<?xml version="1.0"?>
<config>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                    <system>
                        <children>
                            <config>
                                <children>
                                    <belvgall>
                                        <title>Belvg - Extensions</title>
                                    </belvgall>
                                </children>
                            </config>
                        </children>
                    </system>
                </children>
            </admin>
        </resources>
    </acl>
    <events>
        <controller_action_predispatch>
            <observers>
                <belvgall_upds>
                    <type>singleton</type>
                    <class>belvgall/feed</class>
                    <method>check</method>
                </belvgall_upds>
            </observers>
        </controller_action_predispatch>
    </events>   
</config>