<?xml version="1.0"?>
<config>
    <tabs>
        <md module="ajaxscroll" translate="label">
            <label>Mage Designer</label>
            <sort_order>100</sort_order>
        </md>
    </tabs>
    <sections>
        <ajaxscroll module="ajaxscroll" translate="label">
            <label>Ajax Scroll</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>md</tab>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Use Ajax Scoll Products List </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>                        
						<enabled_top translate="label">
                            <label>Show Top Button</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_top>
						<topb_icon translate="label comment">
							<label>Top Icon</label>
							<frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">md/ajaxscroll</upload_dir> 
                            <base_url type="media" scope_info="1">md/ajaxscroll</base_url>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</topb_icon>						
						<loading_icon translate="label comment">
							<label>Loading Bar</label>
							<frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">md/ajaxscroll</upload_dir> 
                            <base_url type="media" scope_info="1">md/ajaxscroll</base_url>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</loading_icon>							
						<loading_img translate="label comment">
							<label>Loading Image</label>
							<frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">md/ajaxscroll</upload_dir> 
                            <base_url type="media" scope_info="1">md/ajaxscroll</base_url>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</loading_img>						
                    </fields>
                </general>
			</groups>
        </ajaxscroll>
    </sections>
</config>